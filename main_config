# Fallout Terminal Theme
font pango:"Droid Sans Mono" 11

# Colors
set $bg #001100
set $fg #00FF00
set $accent #FFFF00

# Window colors
client.focused $accent $bg $fg $accent
client.unfocused $bg $bg $fg $bg

# Key bindings
set $mod Mod4
bindsym $mod+t exec alacritty --config-file ~/.config/alacritty/alacritty.toml
bindsym $mod+d exec dmenu_run -nb "#001100" -nf "#00FF00" -sb "#005500" -sf "#FFFF00"
bindsym $mod+Shift+q kill
bindsym $mod+Shift+r exec "i3-msg reload"
bindsym $mod+Shift+Ctrl+w exec "i3-msg restart"
bindsym $mod+Shift+e exec "i3-msg exit"
bindsym $mod+f fullscreen toggle
bindsym $mod+F2 exec firefox
# Rofi application launcher with Fallout theme
bindsym $mod+space exec rofi -show drun -theme ~/.config/rofi/fallout.rasi

# Focus movement
bindsym Mod1+Left focus left
bindsym Mod1+Right focus right
bindsym Mod1+Up focus up
bindsym Mod1+Down focus down

# Window movement
bindsym Mod1+Shift+Left move left
bindsym Mod1+Shift+Right move right
bindsym Mod1+Shift+Up move up
bindsym Mod1+Shift+Down move down

# Layout and window management
bindsym Mod1+v split v
bindsym Mod1+h split h
bindsym Mod1+s layout stacking
bindsym Mod1+w layout tabbed
bindsym Mod1+Shift+space floating toggle

# Workspace switching (0-9)
bindsym Mod1+1 workspace number 1
bindsym Mod1+2 workspace number 2
bindsym Mod1+3 workspace number 3
bindsym Mod1+4 workspace number 4
bindsym Mod1+5 workspace number 5
bindsym Mod1+6 workspace number 6
bindsym Mod1+7 workspace number 7
bindsym Mod1+8 workspace number 8
bindsym Mod1+9 workspace number 9
bindsym Mod1+0 workspace number 10

# Move window to workspace
bindsym Mod1+Shift+1 move container to workspace number 1
bindsym Mod1+Shift+2 move container to workspace number 2
bindsym Mod1+Shift+3 move container to workspace number 3
bindsym Mod1+Shift+4 move container to workspace number 4
bindsym Mod1+Shift+5 move container to workspace number 5
bindsym Mod1+Shift+6 move container to workspace number 6
bindsym Mod1+Shift+7 move container to workspace number 7
bindsym Mod1+Shift+8 move container to workspace number 8
bindsym Mod1+Shift+9 move container to workspace number 9
bindsym Mod1+Shift+0 move container to workspace number 10

# Set green background
exec_always --no-startup-id feh --bg-fill ~/Downloads/heimdall-dashboard-2.jpg
exec_always picom -b


# Status bar
bar {
    position top
    colors {
        background #001100
        statusline #00FF00
        separator #005500
        focused_workspace #FFFF00 #001100 #00FF00
        active_workspace #005500 #001100 #00FF00
    }
    status_command i3status
}

# RobCo Industrial Terminal
exec_always echo -e "\e[32m"
exec_always echo "    ROBCO INDUSTRIES UNIFIED OPERATING SYSTEM"
exec_always echo "    COPYRIGHT 2075-2077 ROBCO INDUSTRIES"
exec_always echo "    -SERVER 6-"
exec_always echo -e "\e[0m"
exec_always --no-startup-id picom --config ~/.config/picom/picom.conf
# autolayout
exec_always ~/.config/i3/autolayout.sh

# Volume controls (using pactl with PipeWire)
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

# Media keys (optional)
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screenshot
bindsym Print exec flameshot full
bindsym Ctrl+Print exec flameshot gui
bindsym Shift+Print exec flameshot scree
